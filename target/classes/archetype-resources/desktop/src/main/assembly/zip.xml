#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>src</id>

	<formats>
		<format>zip</format>
	</formats>


	<fileSets>
		<!-- Configuration files -->
		<fileSet>
			<directory>${symbol_dollar}{project.basedir}/conf</directory>
		</fileSet>

		<!-- 3rd party files -->
		<fileSet>
			<directory>${symbol_dollar}{project.basedir}</directory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		
		<!-- binaries -->
		<fileSet>
			<directory>${symbol_dollar}{project.basedir}/src/bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>run.bat</include>
				<include>run.sh</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>

	<!-- The binary of the project -->
	<files>
		<file>
			<source> ${symbol_dollar}{project.build.directory}/${symbol_dollar}{project.artifactId}.jar</source>
			<outputDirectory>/bin</outputDirectory>
		</file>
	</files>

	<!-- 3rd party Dependencies -->
	<dependencySets>
		<dependencySet>
			<outputDirectory>/bin/libs</outputDirectory>
			<excludes>
				<exclude>${symbol_dollar}{project.groupId}:${symbol_dollar}{project.artifactId}:jar:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>